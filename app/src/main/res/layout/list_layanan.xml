<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/row_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/imgBuah"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:id="@+id/layoutName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/imgBuah"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/name"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/picture"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:fontFamily="@font/robotom"
                android:text="Fruit Name"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/layoutName"
            android:background="#d4d4d4"
            android:layout_alignLeft="@+id/layoutName" />

        <LinearLayout
            android:id="@+id/LayoutType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutName"
            android:layout_alignStart="@+id/layoutName"
            android:layout_alignLeft="@+id/layoutName"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:text="Type Pet"
            android:textSize="15sp"
            android:weightSum="2">


            <TextView
                android:fontFamily="@font/robotot"
                android:id="@+id/manfaat"
                android:layout_width="267dp"
                android:layout_height="43dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:text="@string/servise2"
                android:textSize="15sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>